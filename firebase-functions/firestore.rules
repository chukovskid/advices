rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write : if true;
    }
    match /users {
      allow read, write : if true;
    }
    match /lawyers/{userId} {
      allow read, write: if true;
    }
    match /lawyers/{userId}/lawAreas/{lawId} {
      allow read, write: if true;
    }
    match /laws/{lawId} {
      allow read, write: if true;
    }
    match /calls {
      allow read, write: if true;
    }
    match /{document=**} {
      allow read, write: if true;
    }
  }
}